<% provide(:title, 'User') %>
<h1 class="text-center mt-4">All Users</h1>
<div class="row p-5">
    <% @users.each do |user| %>
        <div class="col-6">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <%= profile_image(user)%>
                        </div>
                        <div class="col-10">
                            <h4><%= link_to user.name, user %></h4>
                            <p><%= user.email %></p>
                            <p><%= link_to "Follow", user %></p>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="d-flex justify-content-center">
    <%= will_paginate @users %>
</div>	