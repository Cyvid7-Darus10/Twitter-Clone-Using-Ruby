<% provide(:title, 'User') %>

<h1 class="text-center display-4">All Users</h1>
<div class="row m-0 px-5">
    <% @users.each do |user| %>
        <div class="col-lg-4">
            <div class="card mb-3 glass-background">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <%= profile_image(user)%>
                        </div>
                        <div class="col-10">
                            <h4><%= link_to user.name, user, class: "text-decoration-none" %></h4>
                            <p><%= user.email %></p>
                            <%= link_to "Follow", user, class: "btn btn-primary"  %>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="d-flex justify-content-center">
    <%= will_paginate @users %>
</div>	