<% if flash.any? %>
    <% flash.each do |type, msg| %>
        <div class="fixed-top mt-5 col-12 col-lg-6 mx-auto alert alert-<%= type %> alert-dismissible fade show" role="alert">
            <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>
<% end %>